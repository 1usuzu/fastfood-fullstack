<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fastfood">

    <!-- Quyền truy cập Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.Fastfood_app">

        <!-- Màn hình khởi động -->
        <activity
            android:name=".StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Đăng nhập / đăng ký -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <!-- Quên mật khẩu các bước -->
        <activity
            android:name=".ForgotPasswordPhoneActivity"
            android:exported="false" />
        <activity
            android:name=".ForgotPasswordOtpActivity"
            android:exported="false" />
        <activity
            android:name=".ForgotPasswordResetActivity"
            android:exported="false" />

        <!-- Main sau khi đăng nhập -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

    </application>
</manifest>
